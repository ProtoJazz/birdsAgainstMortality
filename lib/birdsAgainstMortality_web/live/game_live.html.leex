  <div class="bam__header-inner">

    <%= if assigns[:game_id]  do %>
      <div class="bam__header--left">
        <div class="bam__game-id">
          <h4>Game ID:</h4>
          <h3 class="monospace"><%= @game_id %></h3>
        </div>

        <div class="bam__game-players">
          <h4>Players: </h4>


          <%= for player <- @state.players  do%>
            <div> <%= player.name %></div>
          <% end %>
        </div>

        <div class="bam__game-spectators">
          <h4>Spectators:</h4>
          <div class="bam__pill">-1</div>
        </div>

        <%= if @user.id != @my_player.id do %>
        <button type="button" class="ui button negative right <%= if  Enum.count(@state.players) >= @game.player_limit do "disabled" end %> " phx-click="join-game">Join Game</button>
        <% end %>
        <%= if is_nil(@state.judge) and @user.id == @my_player.id  do %>
        <button type="button" class="ui button positive right" phx-click="start-game">Start Game</button>
        <% end %>
      </div>


      <div class="bam__header--right">

        <div class="bam__dark-toggle">
          <label for="dark-toggle">Dark/Light</label>
          <input type="checkbox" id="dark-toggle" />
        </div>

        <script>
          $(document).ready(function(){
            $('#dark-toggle').change(function(){
              $(document).find('html').toggleClass('dark');
            });
          });

        </script>

        <div class="bam__game-timer">
            <h6>Round<br />Timer :</h6>
            <h3>0:30</h3>
        </div>

        <div class="ui dropdown icon item right">
          <i class="hamburger icon"></i>
              <%# <div class="menu">
                <div class="item">
                  <i class="dropdown icon"></i>
                  <span class="text">New</span>
                  <div class="menu">
                    <div class="item">Document</div>
                    <div class="item">Image</div>
                  </div>
                </div>
                <div class="item">
                  Open...
                </div>
                <div class="item">
                  Save...
                </div>
                <div class="item">Edit Permissions</div>
                <div class="divider"></div>
                <div class="header">
                  Export
                </div>
                <div class="item">
                  Share...
                </div>
              </div> %>
        </div>

      </div>
    <% end %>

  </div>
</header>
<div class="bam__game-area">

  <section class="bam__board">

    <h3>CARDS IN PLAY DO NOT EAT cards:</h3>

    <div class="bam__game-area">
      <div class="bam__main">
        <%= if !is_nil(@state.current_black_card) do %>
          <div class="bam__card--black">
              <div class="content">
                <span class="black-card-text"><%= @state.current_black_card.text %></span>
                <div class="ui right <%= @state.judge.player.color %> circular label player-logo black-card-player-logo">
                  <span><%= String.slice(@state.judge.player.name, 0..1)%></span>
                </div>
              </div>
            </div>
        <%= end %>
      </div>

      <div class="bam__current-cards">

        <div class="bam__cards-in-play">
        <%= if !@state.game_over do %>
          <%= for player <- @state.players do %>
            <%= for {card, index} <- Enum.with_index(player.hand) do %>
              <%= if Enum.member?(player.cards_in_play, index) do %>
                <div class="bam__card--white <%= if(!am_judge(@state, @my_player)) do "card-is-black-but-i-am-not-judge" end %> <%= if(player.id == @user.id) do "my-played-card"  end %>"  phx-value-player-id="<%= player.id %>" phx-value-index="<%= index %>" phx-click="judge-card" >
                  <div class="content">
                    <span class="header"><%= card %></span>
                    <div class="ui right <%= player.color %> circular label player-logo black-card-player-logo">
                      <span><%= String.slice(player.name, 0..1)%></span>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        <% else %>
        <h3>Game Over! <%= @state.winner.name %> wins all the breadsticks</h3>
        <% end %>
        </div>
      </div>
    </div>

    <div class="bam__my-hand">
      <h3>My cards:</h3>
        <button type="button" class="ui button  <%= if  Enum.count(@my_selected_cards) <= 0  do "disabled" end %> " phx-click="play-cards">Confirm selections</button>
      <div class="cards">
        <%= for {card, index} <- Enum.with_index(@my_player.hand) do %>
          <div class="bam__card--white <%= if Enum.member?(@my_player.cards_in_play, index) or am_judge(@state, @my_player) do "disabled" end %> <%= if Enum.member?(@my_selected_cards, index) do "selected" end %>" phx-value-index="<%= index %>" phx-click="select-card" >
            <div class="content">
              <span class="header"><%= card %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </section>

  <aside class="bam__sidebar">
    <div class="bam__leaderboard">
      <h5>
        <span>
          <svg width="18" height="15" viewBox="0 0 18 15" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M2.60019 10.8572H15.4002C15.6264 10.8574 15.8499 10.9059 16.0558 10.9994L16.9945 3.92314C17.0226 3.72673 16.9394 3.53094 16.7784 3.41492C16.6174 3.2989 16.4054 3.28183 16.2279 3.37061L13.1837 5.68883C13.068 5.78344 12.918 5.82522 12.7701 5.804C12.6223 5.78278 12.4901 5.7005 12.4057 5.57719L9.40126 1.18252C9.30024 1.06656 9.15398 1 9.00019 1C8.8464 1 8.70014 1.06656 8.59912 1.18252L5.59468 5.57719C5.51033 5.7005 5.37813 5.78278 5.23024 5.804C5.08236 5.82522 4.93235 5.78344 4.81672 5.68883L1.77246 3.37132C1.59501 3.28254 1.38295 3.29961 1.22198 3.41563C1.06102 3.53165 0.977769 3.72744 1.00588 3.92385L1.94455 11.0001C2.15043 10.9064 2.37396 10.8576 2.60019 10.8572Z" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M15.4 10.8572H2.6C1.71634 10.8572 1 11.5735 1 12.4572V12.4572C1 13.3408 1.71634 14.0572 2.6 14.0572H15.4C16.2837 14.0572 17 13.3408 17 12.4572V12.4572C17 11.5735 16.2837 10.8572 15.4 10.8572Z" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span>Leaderboard</span>
      </h5>
      <%= for player <- @state.players do %>
        <div class="<%= if player.id == @user.id do "my-post" end %>">
        <%= player.name %>: <%= player.points %>
        </div>
      <% end %>
    </div>

    <%= if @open_chat do %>
      <div class="ui row fluid chat-box">
        <div >
        <%= live_component(
                  @socket,
                  BirdsAgainstMortalityWeb.ChatComponent,
                  title: "Welcome #{@user.name}",
                  messages: @posts,
                  user: @user
                )
            %>
        </div>
      </div>
    <% end %>
  </aside>

  </div>

</div>
